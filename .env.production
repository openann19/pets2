# PawfectMatch Production Environment Variables
# THIS IS A TEMPLATE - Replace values with actual production credentials

# ==========================================
# SERVER CONFIGURATION
# ==========================================

# Server Port
PORT=5000

# Node Environment
NODE_ENV=production

# ==========================================
# DATABASE CONFIGURATION
# ==========================================

# MongoDB Connection String (production database)
MONGODB_URI=mongodb+srv://prod-user:REPLACE_WITH_SECURE_PASSWORD@prod-cluster.mongodb.net/pawfectmatch?retryWrites=true&w=majority

# ==========================================
# JWT AUTHENTICATION
# ==========================================

# JWT Secret Key (strong, random production secret)
JWT_SECRET=REPLACE_WITH_SECURE_RANDOM_STRING_AT_LEAST_32_CHARS

# JWT Access Token Expiry 
JWT_ACCESS_EXPIRY=1h

# JWT Refresh Token Expiry
JWT_REFRESH_EXPIRY=30d

# ==========================================
# CLIENT CONFIGURATION
# ==========================================

# Frontend URL
CLIENT_URL=https://pawfectmatch.com

# ==========================================
# AI SERVICE CONFIGURATION
# ==========================================

# AI Service URL
AI_SERVICE_URL=https://ai.pawfectmatch.com

# ==========================================
# EMAIL CONFIGURATION
# ==========================================

# Email Service
EMAIL_SERVICE=sendgrid

# SendGrid API Key
SENDGRID_API_KEY=REPLACE_WITH_SENDGRID_API_KEY

# Email From Address
EMAIL_FROM=noreply@pawfectmatch.com

# ==========================================
# FILE UPLOAD CONFIGURATION
# ==========================================

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=REPLACE_WITH_PROD_CLOUD_NAME
CLOUDINARY_API_KEY=REPLACE_WITH_PROD_API_KEY
CLOUDINARY_API_SECRET=REPLACE_WITH_PROD_API_SECRET

# ==========================================
# PAYMENT CONFIGURATION (Stripe)
# ==========================================

# Stripe Configuration (LIVE MODE)
STRIPE_PUBLISHABLE_KEY=pk_live_REPLACE_WITH_LIVE_PUBLISHABLE_KEY
STRIPE_SECRET_KEY=sk_live_REPLACE_WITH_LIVE_SECRET_KEY
STRIPE_WEBHOOK_SECRET=whsec_REPLACE_WITH_LIVE_WEBHOOK_SECRET

# ==========================================
# REDIS CONFIGURATION (for sessions/caching)
# ==========================================

# Redis URL for production
REDIS_URL=rediss://username:REPLACE_WITH_REDIS_PASSWORD@redis-host.pawfectmatch.com:6379

# ==========================================
# LOGGING CONFIGURATION
# ==========================================

# Log Level (production should use error or warn)
LOG_LEVEL=error

# Log File Path
LOG_FILE=logs/app.log

# ==========================================
# SECURITY CONFIGURATION
# ==========================================

# CORS Origins (strict in production)
ALLOWED_ORIGINS=https://pawfectmatch.com,https://app.pawfectmatch.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=REPLACE_WITH_SECURE_SESSION_SECRET_AT_LEAST_32_CHARS
SESSION_COOKIE_MAX_AGE=86400000

# ==========================================
# MONITORING & ANALYTICS
# ==========================================

# Sentry DSN (for error tracking)
SENTRY_DSN=https://REPLACE_WITH_SENTRY_DSN@sentry.io/project-id

# Google Analytics ID
GA_TRACKING_ID=G-REPLACE_WITH_GA_ID

# ==========================================
# DEVELOPMENT CONFIGURATION
# ==========================================

# Enable Debug Mode (disabled in production)
DEBUG=false

# Hot Reload (disabled in production)
HOT_RELOAD=false

# Bundle Analyzer (disabled in production)
ANALYZE_BUNDLE=false
