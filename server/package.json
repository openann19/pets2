{
  "name": "server",
  "version": "1.0.0",
  "description": "PawfectMatch backend APIs and services",
  "main": "dist/server.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only server.ts",
    "dev:watch": "nodemon --exec ts-node server.ts",
    "lint": "eslint ./src ./tests",
    "lint:check": "eslint ./src ./tests --max-warnings 0",
    "lint:fix": "eslint ./src ./tests --fix",
    "format": "prettier --write \"{src,tests}/**/*.{js,ts,json,md}\"",
    "format:check": "prettier --check \"{src,tests}/**/*.{js,ts,json,md}\"",
    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --runInBand",
    "type-check": "tsc --noEmit"
  },
  "keywords": [],
  "author": "PawfectMatch Team",
  "license": "MIT",
  "private": true,
  "type": "commonjs",
  "dependencies": {
    "@pawfectmatch/core": "workspace:*",
    "@sentry/node": "^10.17.0",
    "@sentry/profiling-node": "^10.17.0",
    "axios": "^1.12.2",
    "bcryptjs": "^3.0.2",
    "cloudinary": "^2.7.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.2.1",
    "form-data": "^4.0.4",
    "helmet": "^8.1.0",
    "ioredis": "^5.4.1",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "mongodb-memory-server": "^10.2.1",
    "mongoose": "^8.18.2",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.7",
    "nodemon": "^3.1.10",
    "qrcode": "^1.5.4",
    "rate-limit": "^0.1.1",
    "redis": "^5.8.2",
    "semver": "^7.5.2",
    "socket.io": "^4.8.1",
    "speakeasy": "^2.0.0",
    "stripe": "^18.5.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.17.0",
    "ws": "^8.18.3",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.23",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.18.12",
    "@types/nodemailer": "^6.4.19",
    "@types/qrcode": "^1.5.5",
    "@types/supertest": "^6.0.2",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "eslint": "^9.17.0",
    "jest": "^29.7.0",
    "nock": "^14.0.10",
    "prettier": "^3.3.3",
    "sinon": "^21.0.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.3"
  }
}