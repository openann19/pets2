# PawfectMatch Server Environment Configuration
# This is a comprehensive config that supports all features including premium modules

# === Server Configuration ===
NODE_ENV=development
PORT=5000
CLIENT_URL=http://localhost:3000

# === Security & Authentication ===
# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key
JWT_EXPIRE=7d
JWT_REFRESH_EXPIRE=30d

# WebAuthn / Biometric Authentication
WEBAUTHN_RP_NAME=PawfectMatch
WEBAUTHN_RP_ID=localhost
WEBAUTHN_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX=100           # General API rate limit
AUTH_RATE_LIMIT_MAX=5        # Stricter limit for auth endpoints

# Encryption (32 characters for AES-256)
CONFIG_ENCRYPTION_KEY=your_32_character_encryption_key

# === Database & Storage ===
# MongoDB
MONGODB_URI=mongodb://localhost:27017/pawfectmatch_premium

# Redis (Optional - for caching)
REDIS_URL=redis://localhost:6379

# AWS S3 (Optional - for file storage)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your_s3_bucket_name

# === External Services ===
# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret
CLOUDINARY_URL=cloudinary://${CLOUDINARY_API_KEY}:${CLOUDINARY_API_SECRET}@${CLOUDINARY_CLOUD_NAME}

# Email Services
# Nodemailer Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
# SendGrid (Alternative)
SENDGRID_API_KEY=SG.your_sendgrid_api_key

# === Payment Integration ===
# Stripe Configuration
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=your-webhook-secret

# === AI & Machine Learning ===
# AI Service Configuration
AI_SERVICE_URL=http://localhost:8000

# DeepSeek AI Configuration
DEEPSEEK_API_KEY=sk-your_deepseek_api_key
DEEPSEEK_BASE_URL=https://api.deepseek.com
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_MAX_TOKENS=4000
DEEPSEEK_TEMPERATURE=0.7

# === Maps & Location Services ===
# Google Maps Configuration
GOOGLE_MAPS_API_KEY=your-google-maps-key
GOOGLE_MAPS_QUOTA_LIMIT=100000
GOOGLE_CLOUD_BILLING_ACCOUNT=your_billing_account_id

# === Monitoring & Error Tracking ===
# Sentry Configuration
SENTRY_DSN=https://your_sentry_dsn@o123456.ingest.sentry.io/123456