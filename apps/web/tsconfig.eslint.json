{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.base.json",
  "display": "ESLint TypeScript Configuration",
  "compilerOptions": {
    // Include DOM libs for browser globals
    "lib": ["ES2023", "DOM", "DOM.Iterable"],
    
    // Include test files for ESLint parsing
    "types": ["jest", "node"],
    
    // Allow JS files for ESLint parsing
    "allowJs": true,
    
    // Relax some strict rules for ESLint parsing
    "noUncheckedIndexedAccess": false,
    "exactOptionalPropertyTypes": false,
    
    // Root should not emit
    "noEmit": true
  },
  "include": [
    "**/*.ts", 
    "**/*.tsx", 
    "**/*.js", 
    "**/*.jsx",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/setupTests.ts",
    "**/setupTests.js"
  ],
  "exclude": [
    "node_modules",
    ".github",
    "**/cypress/**",
    "**/*.cy.ts",
    "**/*.cy.tsx",
    "cypress",
    "dist",
    ".next",
    "coverage"
  ]
}
