{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.json",
  "display": "ESLint TypeScript Configuration - All Files",
  "compilerOptions": {
    "allowJs": true,
    "noEmit": true
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "ios",
    "android",
    ".expo",
    ".turbo"
  ]
}
