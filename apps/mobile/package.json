{
  "name": "@pawfectmatch/mobile",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "prestart": "pnpm --filter @pawfectmatch/core build",
    "predev": "pnpm --filter @pawfectmatch/core build",
    "prebuild": "pnpm --filter @pawfectmatch/core build",
    "start": "expo start",
    "dev": "expo start --dev-client",
    "demo": "EXPO_PUBLIC_DEMO_MODE=true expo start --dev-client",
    "demo:start": "EXPO_PUBLIC_DEMO_MODE=true expo start -c",
    "demo:apk": "EXPO_PUBLIC_DEMO_MODE=true eas build --platform android --profile preview --local",
    "demo:aab": "EXPO_PUBLIC_DEMO_MODE=true eas build --platform android --profile production --local",
    "demo:web": "EXPO_PUBLIC_DEMO_MODE=true expo start --web",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "build": "expo export",
    "build:dev": "eas build --platform all --profile development",
    "build:preview": "eas build --platform all --profile preview",
    "build:production": "eas build --platform all --profile production",
    "build:android": "eas build --platform android --profile production",
    "build:apk": "eas build --platform android --profile preview --local",
    "build:aab": "eas build --platform android --profile production --local",
    "demo:android:apk": "EXPO_PUBLIC_DEMO_MODE=true eas build --platform android --profile production-apk",
    "demo:android:aab": "EXPO_PUBLIC_DEMO_MODE=true eas build --platform android --profile production",
    "demo:ios": "EXPO_PUBLIC_DEMO_MODE=true eas build --platform ios --profile production",
    "build:android-apk": "eas build --platform android --profile production-apk",
    "build:ios": "eas build --platform ios --profile production",
    "submit:android": "eas submit --platform android",
    "submit:ios": "eas submit --platform ios",
    "submit:all": "eas submit --platform all",
    "update": "eas update",
    "update:production": "eas update --branch production",
    "clean": "rm -rf dist node_modules/.cache .expo",
    "clean:all": "rm -rf dist node_modules/.cache .expo node_modules",
    "reset": "npx expo install --fix && npm run clean",
    "lint": "eslint src --max-warnings 0",
    "lint:check": "eslint src --max-warnings 0",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "tsc -p tsconfig.app.json --noEmit",
    "typecheck:app": "tsc -p tsconfig.app.json --noEmit",
    "typecheck:test": "tsc -p tsconfig.test.json --noEmit",
    "typecheck:e2e": "tsc -p tsconfig.e2e.json --noEmit",
    "type-check": "tsc -p tsconfig.app.json --noEmit",
    "test:services": "NODE_OPTIONS='--max-old-space-size=4096 --expose-gc' jest --selectProjects services --runInBand --coverage",
    "test:ui": "NODE_OPTIONS='--max-old-space-size=4096 --expose-gc' jest --selectProjects ui --runInBand --coverage",
    "test:integration": "NODE_OPTIONS='--max-old-space-size=4096 --expose-gc' jest --selectProjects integration --runInBand --coverage",
    "test": "NODE_OPTIONS='--max-old-space-size=4096 --expose-gc' jest",
    "test:watch": "NODE_OPTIONS='--max-old-space-size=4096 --expose-gc' jest --watch",
    "test:coverage": "NODE_OPTIONS='--max-old-space-size=4096 --expose-gc' jest --coverage",
    "test:ci": "NODE_OPTIONS='--max-old-space-size=4096 --expose-gc' jest --coverage --watchAll=false",
    "test:safe": "NODE_OPTIONS='--max-old-space-size=6144 --expose-gc' jest --maxWorkers=1 --logHeapUsage",
    "test:shard:1": "NODE_OPTIONS='--max-old-space-size=4096 --expose-gc' jest --testPathPattern='components' --coverage",
    "test:shard:2": "NODE_OPTIONS='--max-old-space-size=4096 --expose-gc' jest --testPathPattern='screens' --coverage",
    "test:shard:3": "NODE_OPTIONS='--max-old-space-size=4096 --expose-gc' jest --testPathPattern='(services|hooks)' --coverage",
    "test:shard:4": "NODE_OPTIONS='--max-old-space-size=4096 --expose-gc' jest --testPathPattern='navigation|integration' --coverage",
    "test:shard:5": "NODE_OPTIONS='--max-old-space-size=4096 --expose-gc' jest --testPathPattern='critical|performance|regression' --coverage",
    "test:all-shards": "bash scripts/test-all-shards.sh",
    "test:parallel-shards": "bash scripts/test-parallel-shards.sh",
    "test:memory-profile": "bash scripts/test-with-memory-profile.sh",
    "test:critical": "NODE_OPTIONS='--max-old-space-size=4096' jest --testPathPatterns=\"(critical|integration)\" --ci --watchAll=false",
    "e2e:build:ios:cloud": "eas build --platform ios --profile simulator --non-interactive",
    "e2e:build:android:cloud": "eas build --platform android --profile development --non-interactive",
    "e2e:fetch:ios": "mkdir -p artifacts/ios/app && eas build:run --platform ios --latest --non-interactive --json | jq -r '.artifacts[].url' | xargs -I{} sh -c 'curl -L {} -o artifacts/ios/app/app.tar.gz && tar -xzf artifacts/ios/app/app.tar.gz -C artifacts/ios/app && rm artifacts/ios/app/app.tar.gz'",
    "e2e:fetch:android": "mkdir -p artifacts/android/app && eas build:run --platform android --latest --non-interactive --json | jq -r '.artifacts[].url' | xargs -I{} sh -c 'curl -L {} -o artifacts/android/app/app.apk'",
    "e2e:point:ios": "node -e \"const fs=require('fs');const p='artifacts/ios/app';const f=fs.readdirSync(p).find(x=>x.endsWith('.app'));if(!f){throw new Error('No .app found');}console.log('Using iOS app:',f)\"",
    "e2e:point:android": "test -f artifacts/android/app/app.apk && echo 'Using Android APK: artifacts/android/app/app.apk'",
    "e2e:ios": "detox test -c ios.sim.debug --reuse --take-screenshots manual --record-logs failing",
    "e2e:android": "detox test -c android.emu.debug --reuse --take-screenshots manual --record-logs failing",
    "test:comprehensive": "NODE_OPTIONS='--max-old-space-size=4096' jest --testPathPatterns=\"comprehensive\" --ci --watchAll=false",
    "test:unit": "NODE_OPTIONS='--max-old-space-size=4096' jest --testPathPatterns='(?!integration|performance|security|a11y|comprehensive)' --ci --watchAll=false",
    "test:all": "NODE_OPTIONS='--max-old-space-size=4096' jest --ci --watchAll=false --coverage",
    "test:suite": "../../scripts/test-mobile.sh",
    "bundle:analyze": "node scripts/bundle-analyzer.js",
    "test:accessibility": "NODE_OPTIONS='--max-old-space-size=4096' jest --testPathPatterns=\"a11y\" --ci --watchAll=false",
    "test:e2e:cloud": "node ./scripts/run-device-farm.js",
    "test:perf": "node ./scripts/perf-benchmarks.cjs",
    "test:security": "bash ./scripts/security-scan.sh",
    "test:a11y": "NODE_OPTIONS='--max-old-space-size=4096 --expose-gc' jest --selectProjects a11y --coverage",
    "test:contract": "NODE_OPTIONS='--max-old-space-size=4096 --expose-gc' jest --selectProjects contract",
    "test:generate-summary": "node ./scripts/generate-test-summary.js",
    "mobile:typecheck": "tsc -p tsconfig.json --noEmit",
    "mobile:lint": "eslint 'src/**/*.{ts,tsx}' --config ../../eslint.config.js --quiet || true",
    "mobile:test:services": "jest --selectProjects services --runInBand",
    "mobile:test:ui": "jest --selectProjects ui --runInBand",
    "mobile:bundle:analyze": "react-native-bundle-visualizer",
    "mobile:a11y": "node ./scripts/a11y-scan.mjs && echo 'See reports/ACCESSIBILITY.md'",
    "mobile:perf:verify": "node ./scripts/perf-budget-verify.mjs",
    "mobile:perf:smoke": "node ./scripts/perf-smoke-test.mjs",
    "mobile:bundle:check": "node ./scripts/bundle-size-check.mjs",
    "mobile:contract:check": "node ./scripts/contract-check.mjs",
    "mobile:security": "node ./scripts/security-scan.mjs && node ./scripts/pii-audit.mjs",
    "mobile:telemetry": "node ./scripts/telemetry-coverage.mjs",
    "mobile:codegraph": "node ./scripts/generate-code-graph.mjs && node ./scripts/generate-exports-inventory.mjs",
    "mobile:agents:bootstrap": "node ./scripts/agents-bootstrap.mjs",
    "mobile:agents:full": "node ./scripts/agents-full.mjs",
    "mobile:store:check": "node ./scripts/check-store-ready.mjs",
    "mobile:store:check:bundle-size": "node ./scripts/check-store-ready.mjs --bundle-size",
    "mobile:store:check:metadata": "node ./scripts/check-store-ready.mjs --metadata",
    "mobile:store:check:privacy": "node ./scripts/check-store-ready.mjs --privacy",
    "mobile:store:check:assets": "node ./scripts/check-store-ready.mjs --assets",
    "mobile:store:generate:data-safety": "node ./scripts/generate-android-data-safety.mjs",
    "precommit": "pnpm typecheck && pnpm lint && pnpm test:services && pnpm test:ui",
    "deps:check": "npm audit --audit-level moderate",
    "migrate:theme": "npx jscodeshift -t ./codemods/theme-to-unified.js src --extensions=ts,tsx --parser=tsx",
    "migrate:animation": "npx jscodeshift -t ./codemods/animation-unify.js src --extensions=ts,tsx --parser=tsx",
    "check:consistency": "ts-node scripts/assert-consistency.ts src",
    "check:theme-tokens": "bash scripts/check-theme-tokens.sh",
    "ci:strict": "pnpm lint && pnpm type-check && pnpm test && pnpm check:consistency && pnpm check:theme-tokens",
    "prebuild:expo": "expo prebuild",
    "prebuild:clean": "expo prebuild --clean",
    "storybook": "storybook dev -p 7007",
    "storybook:build": "storybook build",
    "storybook:reset": "rimraf node_modules/.cache/storybook"
  },
