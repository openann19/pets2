{
  "extends": "../../tsconfig.base.json", // <-- Inherits all strict rules
  "compilerOptions": {
    // --- Package-specific overrides ---
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": ["ES2023"],
    "types": ["node", "jest"],
    "verbatimModuleSyntax": false // Allow mixed import/export for compatibility
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules", 
    "dist", 
    "**/*.test.ts", 
    "**/*.spec.ts",
    "**/*.test.tsx",
    "**/*.spec.tsx"
  ]
}
