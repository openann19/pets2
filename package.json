{
  "name": "pawfectmatch-premium",
  "version": "1.0.1-rc.0",
  "type": "module",
  "description": "Premium pet matching platform with advanced features",
  "private": true,
  "_reactVersion": "19.2.0 - React 19 with Next 15",
  "_migrationStatus": "Migrated to React 19 + Next 15",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "pnpm --filter apps/web dev",
    "dev:mobile": "pnpm --filter apps/mobile start",
    "build": "turbo run build",
    "start": "turbo run start",
    "clean": "rimraf dist .turbo .cache coverage artifacts || true",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "turbo run lint -- --max-warnings 0",
    "lint:check": "turbo run lint -- --max-warnings 0",
    "lint:fix": "turbo run lint:fix && turbo run lint -- --max-warnings 0",
    "format:check": "prettier -c .",
    "format:fix": "prettier -w .",
    "secrets:scan": "gitleaks detect --no-banner --redact --exit-code 1 || (echo 'Secrets scan failed' && exit 1)",
    "deps:audit": "pnpm audit",
    "test:unit": "jest --runInBand --ci --coverage --coverageReporters=text-summary --coverageReporters=lcov",
    "test:int": "jest --config jest.int.config.js --runInBand --ci",
    "e2e:ios": "detox test -c ios.sim.release --cleanup",
    "e2e:android": "detox test -c android.emu.release --cleanup",
    "contracts:check": "node scripts/contracts-validate.mjs",
    "perf:budget": "node scripts/perf-budget.mjs --out artifacts/reports/perf.json",
    "bundle:size": "node scripts/bundle-size.mjs --failOnIncrease",
    "coverage:enforce": "node scripts/coverage-enforce.mjs --min=0.90",
    "verify": "pnpm clean && pnpm typecheck && pnpm lint && pnpm format:check && pnpm secrets:scan && pnpm deps:audit && pnpm test:unit && pnpm test:int && pnpm contracts:check && pnpm perf:budget && pnpm bundle:size && pnpm coverage:enforce",
    "type-check": "turbo run type-check",
    "test": "turbo run test --",
    "test:coverage": "turbo run test -- --coverage",
    "test:e2e": "turbo run test:e2e",
    "test:a11y": "turbo run test:a11y",
    "format": "turbo run format",
    "quality:gate": "node scripts/quality-gate.cjs",
    "quality:report": "node scripts/quality-gate.cjs --report",
    "bundle:check": "turbo run bundle:check",
    "perf:check": "turbo run perf:check",
    "test:smoke": "turbo run test:smoke",
    "test:integration": "turbo run test:integration",
    "test:performance": "turbo run test:performance",
    "test:accessibility": "turbo run test:accessibility",
    "test:visual": "turbo run test:visual",
    "test:security": "turbo run test:security",
    "lighthouse": "lhci autorun",
    "bundle:analyze": "turbo run bundle:analyze",
    "bundle:compare": "node scripts/bundle-compare.js",
    "deps:update": "pnpm update --latest",
    "code:quality": "pnpm run lint && pnpm run type-check && pnpm run format:check",
    "test:all": "pnpm run test:ci && pnpm run test:integration && pnpm run test:e2e",
    "security:audit": "pnpm audit --audit-level=moderate",
    "ci:full": "pnpm run code:quality && pnpm run test:all && pnpm run security:audit && pnpm run lighthouse",
    "ci:all": "bash scripts/ci-all.sh",
    "deploy:validate": "node scripts/validate-deployment.cjs",
    "deploy:check": "pnpm run deploy:validate",
    "mobile:loop": "node scripts/mobile-test-loop.mjs",
    "ea:mobile": "tsx scripts/ea.ts",
    "ea:mobile:write": "tsx scripts/ea.ts --write",
    "ea:enhanced": "tsx scripts/ea-enhanced.ts",
    "ea:enhanced:write": "tsx scripts/ea-enhanced.ts --write",
    "fix:theme": "tsx scripts/fix-theme-errors.ts",
    "fix:theme:write": "tsx scripts/fix-theme-errors.ts --write",
    "fix:colors": "tsx scripts/fix-color-errors.ts",
    "fix:colors:write": "tsx scripts/fix-color-errors.ts --write",
    "fix:chained": "tsx scripts/fix-chained-properties.ts",
    "fix:chained:write": "tsx scripts/fix-chained-properties.ts --write",
    "mobile:tsc": "cd apps/mobile && pnpm exec tsc -p tsconfig.app.json --noEmit",
    "mobile:typecheck": "tsc -p apps/mobile/tsconfig.app.json --noEmit",
    "mobile:e2e:typecheck": "tsc -p apps/mobile/tsconfig.e2e.json",
    "mobile:test": "pnpm --filter apps/mobile test",
    "mobile:lint": "eslint apps/mobile/src --max-warnings 0",
    "mobile:test:ci": "jest --config apps/mobile/jest.config.cjs --runInBand --reporters=default --reporters=json --outputFile=apps/mobile/.reports/jest-results.json",
    "mobile:e2e:ci": "detox test -c ios.ci --record-logs all",
    "mobile:lint:surgical": "node scripts/lint-mobile.cjs apps/mobile/src/services/AccessibilityService.ts apps/mobile/src/services/__tests__/AccessibilityService.test.ts apps/mobile/src/screens/LiveStreamViewerScreen.tsx",
    "mobile:exports": "cd apps/mobile && tsx scripts/analyze-exports.ts",
    "mobile:contract:check": "cd apps/mobile && tsx scripts/validate-contracts.ts",
    "mobile:a11y": "cd apps/mobile && tsx scripts/run-a11y-audit.ts",
    "mobile:perf": "cd apps/mobile && tsx scripts/run-perf-audit.ts",
    "mobile:mock": "cd apps/mobile && tsx scripts/mock-server.ts",
    "mobile:scan:ui": "cd apps/mobile && node scripts/scan-ui-violations.js",
    "mobile:scan:colors": "rg -n \"#([0-9a-fA-F]{3,8})\" apps/mobile/src | rg -v \"theme|tokens\" | cat",
    "mobile:scan:spacing": "rg -n \"(padding|margin|gap)\\s*:\\s*\\d+\\b\" apps/mobile/src | rg -v \"tokens|theme\" | cat",
    "i18n:scan": "i18next-scanner --config i18next-scanner.config.cjs",
    "i18n:check": "node scripts/i18n-check.mjs",
    "next15:scan": "node scripts/check-next15-async.mjs apps/web",
    "next15:scan:rg": "rg -n \"\\bcookies\\(|\\bheaders\\(|\\bdraftMode\\(\" apps/web --glob '!**/node_modules/**' || true",
    "cursor:deeplink": "tsx tools/cursor-deeplink-generator.ts",
    "cursor:deeplink:web": "tsx tools/cursor-deeplink-generator.ts --web",
    "audit:baseline": "node scripts/audit-baseline.mjs",
    "audit:typecheck": "pnpm -w -r run typecheck 2>&1 | tee reports/audit/raw/typecheck.log || pnpm -w -r run type-check 2>&1 | tee reports/audit/raw/typecheck.log || echo 'No typecheck scripts found' | tee reports/audit/raw/typecheck.log",
    "audit:lint": "turbo lint 2>&1 | tee reports/audit/raw/lint.log || echo 'Lint completed with errors' | tee -a reports/audit/raw/lint.log",
    "audit:i18n": "pnpm i18n:check 2>&1 | tee reports/audit/raw/i18n.log || echo 'i18n check completed' | tee -a reports/audit/raw/i18n.log",
    "audit:knip": "pnpm knip 2>&1 | tee reports/audit/raw/knip.log || echo '{\"error\":\"knip not installed\"}' > reports/audit/raw/knip.json",
    "audit:madge": "pnpm madge --circular --extensions ts,tsx apps packages 2>&1 | tee reports/audit/raw/madge.log || echo '{\"error\":\"madge not installed\"}' > reports/audit/raw/madge.json",
    "audit:gitleaks": "gitleaks detect --source . --report-path reports/audit/raw/gitleaks.json 2>&1 | tee reports/audit/raw/gitleaks.log || echo '{\"error\":\"gitleaks not installed\"}' > reports/audit/raw/gitleaks.json",
    "audit:all": "pnpm audit:baseline",
    "parity:gen": "node scripts/generate-web-screens.mjs",
    "parity:check": "node scripts/parity-check.mjs",
    "parity:loop": "node scripts/parity-loop.mjs",
    "web:typecheck": "tsc -p apps/web/tsconfig.json --noEmit",
    "test:web": "cd apps/web && jest -c ../../packages/testing/jest.web.config.cjs --runInBand",
    "e2e:web": "playwright test",
    "perf:web": "node scripts/bundle-budget.mjs"
  },
